@model Yoneticiler
@{
    ViewData["Title"] = "Giris";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Terimler Panel</title>

    <!-- Custom fonts for this template-->
    <link href="https://blackrockdigital.github.io/startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/TemplateAdmin/Css/sb-admin-2.min.css" rel="stylesheet" />

    <!-- Custom styles for this page -->
    <link href="~/TemplateAdmin/Css/dataTables.bootstrap4.min.css" rel="stylesheet" />

</head>

<body>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Mühendislik Terimleri</h1>
                                    </div>


                                    <form asp-controller="Yonetim" asp-action="Giris" method="post" enctype="multipart/form-data" class="user">
                                        <div class="form-group">
                                            <input type="text" asp-for="KullaniciAdi" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" asp-for="Sifre" class="form-control form-control-user" placeholder="Şifre">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Beni Hatırla</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Giriş Yap</button>
                                    </form>
                                    <hr>
                                    <a href="#" class="btn btn-google btn-user btn-block">
                                        <i class="fab fa-google fa-fw"></i> Google İle Giriş Yap
                                    </a>
                                    <a href="#" class="btn btn-facebook btn-user btn-block">
                                        <i class="fab fa-facebook-f fa-fw"></i> Facebook İle Giriş Yap
                                    </a>

                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="#">Şifremi Unuttum</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="#">Hesap Oluştur</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/TemplateAdmin/Js/jquery.min.js"></script>
    <script src="~/TemplateAdmin/Js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/TemplateAdmin/Js/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/TemplateAdmin/Js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/TemplateAdmin/Js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/TemplateAdmin/Js/chart-area-demo.js"></script>
    <script src="~/TemplateAdmin/Js/chart-pie-demo.js"></script>

    <!-- Page level plugins -->
    <script src="~/TemplateAdmin/Js/jquery.dataTables.min.js"></script>
    <script src="~/TemplateAdmin/Js/dataTables.bootstrap4.min.js"></script>

</body>

</html>


