@model Duyurular
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_LayoutYonetim.cshtml";
}

<div class="card">
    <div class="card-heading border bottom">
        <br />
        <h4 class="card-title text-center">Duyuru Güncelle</h4>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-9 ml-auto mr-auto">
                <form asp-controller="YonetimDuyurular" asp-action="Guncelle" method="post" enctype="multipart/form-data" class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">
                    <div class="form-group">
                        <br />
                        <label>Duyuru Başlık</label>
                        <input type="text" class="form-control kontrol" asp-for="Baslik" value="@Model.Baslik" required>
                    </div>
                    <div class="form-group">
                        <label>Eklenme Tarihi</label>
                        <input type="text" class="form-control kontrol" asp-for="EklenmeTarihi" value="@Model.EklenmeTarihi" required>
                    </div>
                    <div class="form-group">
                        <label>Duyuru İçerik</label>
                        <textarea class="form-control" asp-for="Icerik" rows="5" required>@Model.Icerik</textarea>
                    </div>
                    <center><button type="submit" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Duyuru Güncelle</button></center><br />
                </form>
            </div>
        </div>
    </div>
</div>

